{% extends "basic.html.twig" %}
{% import 'form/macro.html.twig' as forms %}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

{% block javascriptsrc %} 
    <script type="text/javascript" src="{{ asset('js/jquery-2.1.4.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/myfunctions.js') }}"></script>
{% endblock %}

{% block title %}{{ title }}{% endblock %}
{% block body %}
<div class="container">    
 <div class="row vert-offset-bottom-2">
  <div class="col-md-12">
   <div class="alert alert-info">
             <strong>{% include 'form/requiredtext.html' %}</strong>
   </div>
  </div>
 </div>
{{form_start(form)}}
    
<div class="row">
 <div class="col-md-12">
   <legend><h2>Räumlichkeitsinformationen</h2></legend>
   {% if (attribute(form, 'locid') is defined) %}
    {{ form_row(form.locid) }}
   {% endif %}
   {{ form_row(form.locname) }}
   {{ form_row(form.streetaddress) }}
   {{ form_row(form.postcode) }}
     </div>
 </div>

<div class="row">
 <div class="col-md-12">
  <legend><h2>Rauminformationen</h2></legend>
   <div id="ro" data-prototype="{{ forms.roomItem(form.room.vars.prototype)|e }}">
        {% for ro in form.room %}
            {{ forms.roomItem(ro) }}
        {% endfor %}
    </div>
   <div class="form-group"><div class="col-sm-10 col-sm-push-2"><a href="#" class="btn-add" data-target="ro"><button class="btn btn-info"><span class="glyphicon glyphicon-plus"></span>Raum hinzufügen</button></a></div></div>
 </div>
</div>

<div class="row vert-offset-top-1">
 <div class="col-md-12"> 
  <div class="form-group">
   <div class="col-sm-10 col-sm-push-2">
 
  {{ form_widget(form.save, {'attr': {'onclick': 'confirmaction(event, "Sind Sie sicher dass Sie die eingegebenen Daten speichern wollen?")'}}) }}
  {{ form_widget(form.reset, {'attr': {'onclick': 'confirmaction(event, "Sind Sie sich sicher, dass Sie dieses Formular zurücksetzen möchten?")'}}) }}

{% if (attribute(form, 'delete') is defined) %}
    {{ form_widget(form.delete, {'attr': {'onclick': 'confirmaction(event, "Sind Sie sich sicher, dass Sie dieses Objekt aus ihrer Datenbank entfernen möchten?")'}}) }}
 
{% endif %}
  <a href="{{ path('location_home') }}">{{ form_widget(form.cancel, {'attr': {'onclick': 'confirmaction(event, "Sind Sie sich sicher, dass Sie diese Seite verlassen möchten? Ungespeicherte Daten werden dabei verloren gehen.")'}}) }}</a>
  {{ form_row(form._token) }}
  
   </div>
  </div>
 </div>
</div>  
</div>
{% endblock %}