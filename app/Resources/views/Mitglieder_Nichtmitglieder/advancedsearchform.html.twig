

{% extends "basic.html.twig" %}


{% import 'form/macro.html.twig' as forms %}

{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


{% block javascriptsrc %} 
    <script type="text/javascript" src="{{ asset('js/jquery-2.1.4.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/myfunctions.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}

{% block title %}{{type|capitalize}}: Erweiterte Suche{% endblock %}



{% block body %}
    <div class="container">
       
        <div class="row vert-offset-bottom-2">
            <div class="col-md-12">
                <div class="alert alert-info">
                    <span class="glyphicon glyphicon-info-sign"></span><strong> 
                        Sie befinden sich in der erweiterten Suche. 
                        Mit Hilfe der erweiterten Suche können Personen gesucht werden, welche den hier angegebenen Such-Parametern entsprechen. 
                        So können beispielsweise Personen gesucht werden, die einen Rehaschein besitzen, der zu einem bestimmten Datum abläuft und eine gewisse Anzahl an Einheiten besitzt.</strong>
                </div>
                    {{ form_errors(form) }}

           </div>
        </div>
            
    {{ form_start(form) }}
    
        <div class="row">
            <div class="col-md-12">
                <legend><h2>Rehaschein</h2></legend>
                <div class="form-group">
                    <div class="col-sm-1">
                    {{ form_label(form.terminationdatecompoperators) }}
                    </div>
                    <div class="col-sm-2">
                        {{ form_widget(form.terminationdatecompoperators) }}
                        {{ form_errors(form.terminationdatecompoperators) }}
                    </div>
                    <div class="col-sm-3">
                        {{ form_widget(form.terminationdate) }}
                        {{ form_errors(form.terminationdate) }}
                    </div>
                    <div class="col-sm-1">
                        {{ form_label(form.rehabunitscompoperators) }}
                    </div>
                    <div class="col-sm-1">
                        {{ form_widget(form.rehabunitscompoperators) }}
                        {{ form_errors(form.rehabunitscompoperators) }}
                    </div>
                    <div class="col-sm-3">
                        {{ form_widget(form.rehabunits) }}
                        {{ form_errors(form.rehabunits) }}
                    </div>
                    <div class="col-sm-1">
                        {{ form_label(form.rehabunits) }}
                    </div>
                </div>


            </div>
        </div>

        <div class="row">
            <div class="col-md-12 vert-offset-top-2">
                <legend>
                        <h2>
                            Sportgruppe
                        </h2>
                </legend>
                <div class="form-group">
                    <div class="col-sm-1">
                        {{form_label(form.sportsgroup)}}
                    </div>
                    <div class="col-sm-7">
                        {{form_widget(form.sportsgroup)}}
                        {{form_errors(form.sportsgroup)}}
                    </div>
                    <div class="col-sm-2">
                        {{form_label(form.membersportsgroupstate)}}
                    </div>
                    <div class="col-sm-2">
                        {{form_widget(form.membersportsgroupstate)}}
                        {{form_errors(form.membersportsgroupstate)}}
                    </div>

            </div>
        </div>
        



        <div class="row vert-offset-top-1">
            <div class="col-md-12"> 
                <div class="form-group">
                    <div class="col-sm-10 col-sm-push-2">
                        {{ form_widget(form.search) }}
                        <a href="{{path('advancedsearchmem', {'type': type, 'relation': relation, 'letter': cletter})}}">{{ form_widget(form.reset, {'attr': {'onclick': 'confirmaction(event, "Sind Sie sich sicher, dass Sie dieses Formular zurücksetzen möchten? Ungespeicherte Daten gehen dabei verloren.")'}}) }}</a>
                        <a href="{{ path('member_home', {'type': type, 'relation': relation,'letter': cletter}|merge(app.request.query.all)) }}">{{ form_widget(form.cancel, {'attr': {'onclick': 'confirmaction(event, "Sind Sie sich sicher, dass Sie diese Seite verlassen möchten? Ungespeicherte Daten werden dabei verloren gehen.")'}}) }}</a>

                        {{ form_row(form._token) }}
                    </div>
                </div>
            </div>
        </div>

    {{ form_end(form, {'render_rest': false}) }}
            
    </div>
{% endblock %}
