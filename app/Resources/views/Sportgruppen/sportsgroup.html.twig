{% block tbody %}
    {% for data in tabledata %}
        
        <tr>
        {% if data.name|first == 'Ä' %}
                {% set first = 'A' %}
                {% elseif data.name|first == 'Ö' %}
                {% set first = 'O' %}
                {% elseif data.name|first == 'Ü' %}
                {% set first = 'U' %}
                {% else %}
                {% set first = data.name|first %}   
        {% endif %}
        <td><center><a href="{{ path('editsportsgroup', {'letter': first|capitalize, 'ID': data.sgid, 'adminyear': adminyear,  'version': data.validfrom }) }}"><button  class='btn btn-default btn-sm'  name='update'> <span class='glyphicon glyphicon-wrench'></span></button></a></center></td>       
        <td>{{ data.name|striptags }}</td>
        <td>{{ data.info|striptags }}</td> 
        <td>{{ data.time|date("H:i") }}</td>
