        {% set rooms =sportsgroupdependentlist[data.roomid]['rooms'] %}
        {% else %}
          {% set rooms  ='' %}  
        {% endif %}
        <td>{% for RO in rooms %}                     
               {{RO.roomname }}
            {% else %}
                {{ "-" }}</td>
            {% endfor %}
            
{#/******************************************************** #} 
        <td>{{ data.token|striptags }}</td>
        <td>{{ data.sgid|striptags }}</td>
