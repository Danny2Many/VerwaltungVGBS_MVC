{% extends 'basic.html.twig' %}
{% form_theme searchform 'bootstrap_3_layout.html.twig' %}

{% block title %}Mitglieder - Finanzen{% endblock %}
{% block fixedcolnum %} 7 {% endblock %}
{% block viewlink %}{{ path('member_fin') }}{% endblock %}
{% block viewname %}Mitglieder - Finanzdaten - {{ year }}{% endblock %}
{% block MitglAktiv %} active {% endblock %}
{% block FinanzAktiv %} active {% endblock %}

{% block search %}
    
{{ form_start(searchform) }}
{{ form_widget(searchform.Spalte) }}
{{ form_widget(searchform.searchfield) }}
{{ form_widget(searchform.search) }}
<a href="{{ path('member_fin') }}"><input type="button" class="form-control" value="zurücksetzen" {{ disabled }}></a>
{{ form_end(searchform) }}

{% endblock %}

{% block dropdown %}
      <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Finanzjahr
                    <span class="caret"></span></button>
                        <ul class="dropdown-menu">
                            {% for finyear in finyears %}
                           
                            {% if finyear.year == year %}
                            <li class="active"><a href="#">{{ finyear.year }}</a></li>
                            {% else %}
                             <li><a href="#">{{ finyear.year }}</a></li>
                            {% endif %}
                            {% endfor %}
                        </ul>
                    </div> 
    {% endblock %}

{% block tabs %}
<ul class="nav nav-tabs">
  <li class="active"><a href="#">1. Halbjahr</a></li>
  <li><a href="#">2. Halbjahr</a></li>
</ul>
    {% endblock %}
    
{% block color %} {{ colorclass }} {% endblock %}



    

    {% block thead %}
        
            
        <th>Bearb.</th><th>M_Nr</th><th>Abt</th><th>Status</th><th>Anr.</th><th>Name</th><th>Vorname</th><th>Aufnahmegeb.</th><th>Aufnahmegeb. offen</th><th>Aufnahmegeb. gez.</th><th>zusätzl. Beitr.Info</th><th>Umlage</th><th>Beitr. Jan.</th><th>Beitr. Jan. offen</th><th>Beitr. Jan. gez.</th><th>Beitr. Feb.</th><th>Beitr. Feb. offen</th><th>Beitr. Feb. gez.</th><th>Beitr. März</th><th>Beitr. März offen</th><th>Beitr. März gez.</th><th>Beitr. Apr.</th><th>Beitr. Apr. offen</th> 
        <th>Beitr. Apr. gez</th><th>Beitr. Mai</th><th>Beitr. Mai offen</th><th>Beitr. Mai gez.</th><th>Beitr. Juni</th><th>Beitr. Juni offen</th><th>Beitr. Juni gez.</th><th>Beitr. Juli</th><th>Beitr. Juli offen</th><th>Beitr. Juli gez.</th><th>Beitr. Aug.</th><th>Beitr. Aug. offen</th><th>Beitr. Aug. gez.</th><th>Beitr. Sep.</th><th>Beitr. Sep. offen</th><th>Beitr. Sep. gez.</th><th>Beitr. Nov.</th><th>Beitr. Nov. offen</th><th>Beitr. Nov. gez.</th><th>Beitr. Dez.</th><th>Beitr. Dez. offen</th><th>Beitr. Dez. gez.</th>
        
    {% endblock %}
        
    
    
    
    
    {% block tbody %}
        {% for data in tabledata %}
            {% autoescape  %}
            <tr> 
               
                <td><center><a href="#"><button  class='btn btn-default btn-sm'  name='update'> <span class='glyphicon glyphicon-wrench'></span></button></center></a></td>
                <td>{{ data.memid }}</td>
                <td>{% if data.section is empty %}
                   {{ "-" }}
                    {% else  %}
                         {% for Sec in data.section %}
                        {{ Sec.sectionname }}<br>
                    {% endfor %}
                    
                    {% endif %}</td>
                <td>{{ data.state|striptags }}</td>
               
                <td>{{ data.title|striptags }}</td>
                <td>{{ data.lastname|striptags }}</td>
                <td>{{ data.firstname|striptags }}</td>                
                <td>{{ data.admissioncharge }}</td>
                <td>{{ data.admissioncharge - data.admissionchargepayed }}</td>
                <td>{{ data.admissionchargepayed }}</td>
                
                {% for yearinfo in data.yearinfo %}
                <td>{{ yearinfo.additionalduesinfo }}</td>
                <td>{{ yearinfo.levy }}</td>
               {% endfor %}
               
               
                    {% for monthlydue in data.monthlydues %}
                        <td>{{ monthlydue.dues }}</td>
                        <td>{{ monthlydue.dues - monthlydue.duespayed }}</td>
                        <td>{{ monthlydue.duespayed }}</td>
                    {% endfor %}
                    
                    
                
           {% endautoescape %} 
        {% endfor %}
            {% endblock %}
