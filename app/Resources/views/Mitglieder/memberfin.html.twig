                        <td>{{ monthlydue.duespayed is empty ? 0 : monthlydue.duespayed }}</td>
                        {% endif %}
                    {% endfor %}#}

                    {% set duespayed = data.duespayed %}
                    
                    {% for month in months %}
                        
                            
                         
                     
