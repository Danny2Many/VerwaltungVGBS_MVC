                          {% set opendues = '-' %}
                          {% set due = '-' %}
                         
                        
                          
                         {% for due in data.due if due.paystart|date("m") <= month and due.payend|date("m") > month %}
                          
                                
                              {% set payeddues = 0 %}
                              
